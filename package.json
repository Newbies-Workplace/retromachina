{
  "name": "retromachina",
  "private": true,
  "scripts": {
    "dev": "dotenvx run -- turbo dev",
    "build": "dotenvx run -- turbo build",
    "start": "dotenvx run -- turbo start",
    "test": "dotenvx run -- turbo test",
    "format": "npx @biomejs/biome check --apply ./",
    "prepare": "husky install"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.5.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "turbo": "^1.13.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**.{js,ts,jsx,tsx,json}": [
      "biome check --apply --no-errors-on-unmatched"
    ]
  },
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
